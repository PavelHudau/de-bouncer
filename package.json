{
  "name": "@pavelhudau/de-bouncer",
  "version": "1.0.5",
  "description": "TypeScript and JavaScript De-Bouncer implementation.",
  "exports": {
    ".": "./dist/de-bouncer.js",
    "./debounce-strategies": "./dist/debounce-strategies.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "scripts": {
    "clean": "rm -rf bundles lib dist",
    "build": "tsc & webpack",
    "lint": "eslint --config eslint.config.mjs src/",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "commitsrc": "git diff-index --quiet HEAD -- && echo \"Nothing to commit\" || { git add -A src && git commit -m \"auto-formatting\"; }",
    "commitversion": "git diff-index --quiet HEAD -- && echo \"Nothing to commit\" || { git add -A package.json package-lock.json && git commit -m \"version bump\"; }",
    "preversion": "npm run lint && npm run format && npm run commitsrc",
    "version": "npm run commitversion",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pavelhudau/de-bouncer.git"
  },
  "keywords": [
    "DeBouncer",
    "De Bounce"
  ],
  "author": "Pavel Hudau",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PavelHudau/de-bouncer/issues"
  },
  "homepage": "https://github.com/PavelHudau/de-bouncer#README.md",
  "files": [
    "lib/**/*",
    "dist/**/*",
    "bundles/**/*"
  ],
  "directories": {
    "lib": "lib"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  }
}
