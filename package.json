{
  "name": "@pavelhudau/de-bouncer",
  "version": "0.0.2",
  "description": "TypeScript and JavaScript De-Bouncer implementation.",
  "main": "index.js/de-bouncer.js",
  "types": "lib/de-bouncer.d.ts",
  "scripts": {
    "clean": "rm -rf _bundles lib",
    "build": "tsc & webpack",
    "lint": "tslint -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PavelHudau/de-bouncer.git"
  },
  "keywords": [
    "DeBouncer",
    "De Bounce"
  ],
  "author": "Pavel Hudau",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PavelHudau/de-bouncer/issues"
  },
  "homepage": "https://github.com/PavelHudau/de-bouncer#README.md",
  "files": [
    "lib/**/*",
    "_bundles/**/*"
  ],
  "directories": {
    "lib": "lib"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "eslint": "^8.55.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
